<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorForeground">@color/foreground_material_light</item>
        <item name="android:textViewStyle">@style/ProductSansStyle</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textViewStyle">@style/ProductSansStyle</item>
        <item name="android:textColor">#000000</item>
        <item name="android:editTextColor">#000000</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textViewStyle">@style/ProductSansStyle</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textViewStyle">@style/ProductSansStyle</item>
    </style>

    <style name="Custom" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textViewStyle">@style/BitterReguar</item>
    </style>

    <style name="ProductSansStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/productsans</item>
    </style>

    <style name="BitterReguar" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/bitter</item>
    </style>

</resources>
